@model VendedorModel

<h2>Cadastro de Vendedor</h2>

<br />

<form asp-controller="Vendedor" asp-action="Cadastro">
    <input type="hidden" asp-for="Id" value="@try { @ViewBag.Vendedor.Id } catch { } " />
    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" type="text" class="form-control" value="@try { @ViewBag.Vendedor.Nome } catch { } " />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="text" class="form-control" value="@try { @ViewBag.Vendedor.Email } catch { } " />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>

<br /><br />
<button class="btn btn-block btn-primary" type="button" onclick="Voltar()">Retornar para Lista de Vendedor</button>

<script>
    function Voltar() {
        window.location.href = '../../Vendedor/Index';
    }
</script>